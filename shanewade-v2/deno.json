{
  "workspace": ["./web", "./api"],
  "fmt": {
    "lineWidth": 120,
    "semicolons": false,
    "singleQuote": true,
    "useTabs": false
  },
  "tasks": {
    "web": "deno task --cwd web dev",
    "api": "deno task --cwd api dev",
    "build": "deno task --cwd web build"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@astrojs/vercel": "npm:@astrojs/vercel@^9.0.0",
    "astro": "npm:astro@^5.15.1",
    "sharp": "npm:sharp@^0.34.4"
  }
}
